---
import { Image } from "astro:assets";
import appleImg from "@/assets/apple-badge.png";
import stepscapeImg from "@/assets/stepscape-img.jpeg";
import PageLayout from "@/layouts/Base.astro";
---

<PageLayout meta={{ title: "Stepscape" }}>
    <div class="max-w-7xl grid mx-auto grid-cols-1 md:grid-cols-2 gap-2">
        <section class="col-span-1">
            <section class="max-w-3xl">
                <h1 class="text-2xl font-bold mb-6 leading-tight text-garden-light dark:text-green-400">
                    Turn Your Daily Steps into a Thriving Garden!
                </h1>
                <p class="text-lg leading-relaxed text-gray-700 dark:text-gray-200 mb-8">
                    Every step you take helps your plants grow, making fitness feel rewarding in a whole new way. Set
                    your step goal, plant your seeds, and watch as your activity brings them to life!
                </p>
                <a
                    href="https://linktr.ee/stepscape"
                    class="bg-garden-light hover:bg-garden-dark text-white px-4 border border-white py-4 text-xl transition-colors duration-300"
                >
                    Start Growing Today!
                </a>
            </section>
            <div class="flex gap-8 flex-wrap mt-8">
                <div class="flex-1 min-w-[250px] max-w-[300px] p-6 bg-green-50 dark:bg-gray-800 rounded-2xl">
                    <h3
                        class="text-garden-light dark:text-green-400 text-xl font-semibold mb-4 flex flex-row items-center gap-x-2"
                    >
                        <span class="text-4xl mb-4 block">ðŸ‘£</span>
